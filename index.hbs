{{! Blog content }}
<main class="content" role="main">
  <div class="main--content container">

  {{#foreach posts}}
    {{#if image}}
      <article class="material-card slide image" role="article">
      <!-- Header -->
      <header class="card--header bg-darken">
    {{else}}
      <article class="material-card slide" role="article">
      <!-- Header -->
      <header class="card--header">
    {{/if}}
        <!-- Title -->
        <h5 class="card--title" itemprop="headline">{{title}}</h5>
        <span class="card--subtitle">
          <i class="fa fa-calendar-o"></i>
          <time datetime="{{date format='YYYY-MM-DD'}}" itemprop="datePublished">
            {{date format='DD MMM YYYY'}}
          </time>
        </span>
        <!-- Image -->
        {{#if image}}<img class="bg-image" src="{{image}}" />{{/if}}
      </header>
      <!-- Content -->
      <section class="card--main">
        <summary class="card--content" itemprop="articleBody">
          {{excerpt words="50"}}&hellip;
        </summary>
      </section>
      <!-- Actions -->
      <footer class="card--actions right">
        <a class="button ripple" href="{{url}}">More</a>
      </footer>
    </article>
  {{/foreach}}
  </div>
</main>


